<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace = "com.egemmerce.hc.repository.mapper.ImageMapper">

	<!-- U :: 상품 사진 추가 -->
	<insert id="insertItemPhoto" parameterType="itemphoto">
	insert into itemphoto
		(ip_i_no, ip_value)
	values 
		(#{ipINo}, #{ipValue})
	</insert>

	<!-- R :: 상품 사진 조회 -->
	<select id="selectItemPhotoList" parameterType="itemphoto" resultType="itemphoto">
		select *
		  from itemphoto
		 where ip_i_no=#{ipINo}
	</select>
	
	<!-- U :: 유저 프로필사진 업데이트 -->
	<update id="updateProfile" parameterType="user">
	update user
	   set u_image=#{uImage}
	 where u_email=#{uEmail}
	</update>
	
</mapper>